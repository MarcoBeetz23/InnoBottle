<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="170dp"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/gradient_background"
                    android:gravity="center"
                    android:text="Delete your sensor run"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold">

                </TextView>
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/delete"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp">

                </ImageView>

                <ImageView
                    android:id="@+id/cancel_deleteProcess"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"
                    android:background="@drawable/cancel">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Are you sure you want to delete this sensor run?"
                android:textSize="12sp"
                android:textColor="#636161"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textAlignment="center"
                android:layout_marginTop="20dp">

            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:weightSum="2"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">
                <!--Buttons-->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_finalDelete"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:text="Delete"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="@null"
                    android:background="@drawable/gradient_background_button"
                    android:textSize="11sp"
                    android:layout_weight="1"
                    android:layout_marginEnd="20dp"
                    app:icon="@drawable/delete"
                    app:iconGravity="textStart"
                    app:iconSize="15dp"
                    app:iconPadding="10dp"
                    app:iconTint="#FFFFFF">

                </com.google.android.material.button.MaterialButton>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancelDelete"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:text="Cancel"
                    android:textColor="#1A9A9B"
                    android:textSize="11sp"
                    app:backgroundTint="#FFFFFF"
                    app:strokeColor="#1A9A9B"
                    android:textStyle="bold"
                    app:strokeWidth="2dp"
                    app:cornerRadius="10dp"
                    android:layout_weight="1"
                    app:icon="@drawable/cancel"
                    app:iconGravity="textStart"
                    app:iconSize="18dp"
                    app:iconPadding="7dp"
                    app:iconTint="#1A9A9B">

                </com.google.android.material.button.MaterialButton>


            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>